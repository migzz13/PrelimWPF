<Window x:Class="PrelimWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrelimWPF"
        mc:Ignorable="d"
        Title="8-Bit Binary Game" Height="566" Width="911" ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,-6">
        <Grid.Background>
            <ImageBrush ImageSource="/46888871-624a3900-ce7f-11e8-808e-99fd90c8a3f4.png"/>
        </Grid.Background>
        <Label Content="LEADERBOARD" HorizontalAlignment="Left" Margin="-200,55,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="UltraBold" Foreground="White"/>
        <Label Content="8-Bit Binary Game" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" FontSize="65" FontWeight="Bold" Background="{x:Null}" FontFamily="Lucida Console">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0.242"/>
                    <GradientStop Color="#FF58DC61" Offset="0.434"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Label x:Name="Timer" Content="Label" BorderThickness="4" HorizontalAlignment="Center" Margin="0,123,0,0" VerticalAlignment="Top" Background="#FF929292" FontFamily="Lucida Console" FontSize="30" BorderBrush="Black"/>
        <Label x:Name="DecimalNum" Content="Label" BorderThickness="4" HorizontalAlignment="Center" Margin="0,224,0,0" VerticalAlignment="Top" Background="#FF929292" FontFamily="Lucida Console" FontSize="30" BorderBrush="Black"/>
        <Button x:Name="StartBtn" Content="Start" BorderThickness="3" Margin="146,0,0,47" Background="#FFFF793B" BorderBrush="White" FontFamily="Lucida Console" FontSize="30" Foreground="White" Height="64" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="237"/>
        <Button x:Name="RuleBtn" Content="How to play" BorderThickness="3" Margin="0,0,146,47" Background="#FFFF793B" BorderBrush="White" Foreground="White" FontSize="30" FontFamily="Lucida Console" Click="RuleBtn_Click" Height="64" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="237"/>
        <TextBox x:Name="UserInput" BorderThickness="4" HorizontalAlignment="Center" Margin="0,320,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="270" Height="63" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="#FF929292"  FontSize="30" FontFamily="Lucida Console" Foreground="Black" BorderBrush="Black" TextChanged="UserInput_TextChanged"/>
        <ListBox x:Name="leaderboard"  d:ItemsSource="{d:SampleData ItemCount=5}" Margin="-212,102,0,0" FontWeight="Bold" HorizontalAlignment="Left" Width="168" Height="170" VerticalAlignment="Top">
            <ListBox.BorderBrush>
                <SolidColorBrush Color="White" Opacity="0"/>
            </ListBox.BorderBrush>
            <ListBox.Background>
                <SolidColorBrush Color="Black" Opacity="0.25"/>
            </ListBox.Background>
            <ListBox.OpacityMask>
                <SolidColorBrush Color="White" Opacity="0.75"/>
            </ListBox.OpacityMask>
            <ListBox.Foreground>
                <SolidColorBrush Color="White" Opacity="1"/>
            </ListBox.Foreground>
        </ListBox>
       </Grid>
</Window>
